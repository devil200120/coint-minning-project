{
  "admin_kyc": {
    "name": "üìÑ Admin - KYC Management",
    "description": "Admin endpoints for KYC verification",
    "item": [
      {
        "name": "Get All KYC Requests",
        "request": {
          "method": "GET",
          "header": [
            {
              "key": "Authorization",
              "value": "Bearer {{adminToken}}"
            }
          ],
          "url": {
            "raw": "{{baseUrl}}/api/admin/kyc?page=1&limit=10&status=all",
            "host": ["{{baseUrl}}"],
            "path": ["api", "admin", "kyc"],
            "query": [
              {
                "key": "page",
                "value": "1"
              },
              {
                "key": "limit",
                "value": "10"
              },
              {
                "key": "status",
                "value": "all",
                "description": "Filter: all, pending, approved, rejected"
              }
            ]
          },
          "description": "Get all KYC submissions"
        }
      },
      {
        "name": "Get KYC Stats",
        "request": {
          "method": "GET",
          "header": [
            {
              "key": "Authorization",
              "value": "Bearer {{adminToken}}"
            }
          ],
          "url": {
            "raw": "{{baseUrl}}/api/admin/kyc/stats",
            "host": ["{{baseUrl}}"],
            "path": ["api", "admin", "kyc", "stats"]
          },
          "description": "Get KYC statistics"
        }
      },
      {
        "name": "Get KYC by ID",
        "request": {
          "method": "GET",
          "header": [
            {
              "key": "Authorization",
              "value": "Bearer {{adminToken}}"
            }
          ],
          "url": {
            "raw": "{{baseUrl}}/api/admin/kyc/:kycId",
            "host": ["{{baseUrl}}"],
            "path": ["api", "admin", "kyc", ":kycId"],
            "variable": [
              {
                "key": "kycId",
                "value": "kyc_id_here"
              }
            ]
          },
          "description": "Get single KYC submission details"
        }
      },
      {
        "name": "Approve KYC",
        "request": {
          "method": "PUT",
          "header": [
            {
              "key": "Authorization",
              "value": "Bearer {{adminToken}}"
            },
            {
              "key": "Content-Type",
              "value": "application/json"
            }
          ],
          "body": {
            "mode": "raw",
            "raw": "{\n  \"note\": \"Documents verified successfully\"\n}"
          },
          "url": {
            "raw": "{{baseUrl}}/api/admin/kyc/:kycId/approve",
            "host": ["{{baseUrl}}"],
            "path": ["api", "admin", "kyc", ":kycId", "approve"],
            "variable": [
              {
                "key": "kycId",
                "value": "kyc_id_here"
              }
            ]
          },
          "description": "Approve a KYC submission"
        }
      },
      {
        "name": "Reject KYC",
        "request": {
          "method": "PUT",
          "header": [
            {
              "key": "Authorization",
              "value": "Bearer {{adminToken}}"
            },
            {
              "key": "Content-Type",
              "value": "application/json"
            }
          ],
          "body": {
            "mode": "raw",
            "raw": "{\n  \"reason\": \"Documents are not clear. Please resubmit.\"\n}"
          },
          "url": {
            "raw": "{{baseUrl}}/api/admin/kyc/:kycId/reject",
            "host": ["{{baseUrl}}"],
            "path": ["api", "admin", "kyc", ":kycId", "reject"],
            "variable": [
              {
                "key": "kycId",
                "value": "kyc_id_here"
              }
            ]
          },
          "description": "Reject a KYC submission with reason"
        }
      }
    ]
  },
